/* pages/person/person.wxss */
.top_box{
  background-image: linear-gradient(0deg, #FFB139 0%, #F29200 100%);
  width: 100%;
  height: 420rpx;
  position: relative;
}
.top_img{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  left: 50%;
  top: 30rpx;
  margin-left: -80rpx;
  border-radius: 50%;
  overflow: hidden;
  border:1rpx solid #e6e7e8;
}
.top_img image{
  width: 100%;
  height: 100%;
}
.top_name{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  color: #fff;
  font-size: 36rpx;
  left: 0;
  top: 210rpx;
  text-align: center;
}
.top_data{
  width: 100%;
  height: 110rpx;
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
}
.top_item{
  flex: 1;
  position: relative;
  color: #fff;
}
.top_text0{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  bottom: 56rpx;
  left: 0;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
}
.top_text1{
  color: #fff;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  bottom: 10rpx;
  left: 0;  
  text-align: center;
}
.top_x{
  width: 100%;
  height: 60rpx;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -30rpx;
  border-right: 1rpx solid #fff;
}
.foot_box{
  border-top: 1rpx solid #fff;
  overflow: hidden;
  background: #fff;
  position: relative;
}
.foot_text0,.foot_text{
  width: 460rpx;
  padding-left: 72rpx;
  margin-left: 244rpx;
  height: 54rpx;
  line-height: 54rpx;
  font-size: 38rpx;
  color: #474245;
}
.foot_text0{
  margin-top: 120rpx;
  background: url(http://ozg7zdnzy.bkt.clouddn.com/fls_logo1.png) left center no-repeat;
  background-size: 44rpx 44rpx;
}
.foot_text{
  margin-top: 60rpx;
  position: relative;
}
.foot_text1{
  background: url(http://ozg7zdnzy.bkt.clouddn.com/fls_logo0.png) left center no-repeat;
  background-size: 44rpx 44rpx;
}
.foot_text2{
  background: url(http://ozg7zdnzy.bkt.clouddn.com/fls_logo3.png) left center no-repeat;
  background-size: 44rpx 44rpx;  
}
.foot_text3{
  background: url(http://ozg7zdnzy.bkt.clouddn.com/fls_kefu.png) left center no-repeat;
  background-size: 44rpx 44rpx;  
}
.foot_text3  button{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  opacity: 0;
}