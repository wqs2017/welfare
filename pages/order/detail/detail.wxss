/* pages/order/detail/detail.wxss */

.page{
  background: #f5f5f9;
}
.order_status_box{
  width: 100%;
  height: 154rpx;
  position: relative;
}
.status_pic{
  width: 100%;
  height: 84rpx;
  position: relative;
}
.status_a,.status_b,.status_c{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 24rpx;
  z-index: 2;
  border-radius: 50%;
}
.status_a{
  left: 143rpx;
}
.status_b{
  left: 365rpx;
}
.status_c{
  left: 581rpx;
}
.circle{
    position: absolute;
    left: 50%;
    top: 50%;
    width: 24rpx;
    height: 24rpx;
    margin-top: -12rpx;
    margin-left: -12rpx;
    border-radius: 50%;
    z-index: 9;
}
.default_circle{
  background: #bdc5de;
}
.green_circle{
  background: #46C33B;
}
.pay_success{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: url(http://ow5o1qil6.bkt.clouddn.com/pp_pay_success.png) center center no-repeat;
  background-size: 100% 100%;
  z-index: 9;
}
.status_ax,.status_bx{
  width: 218rpx;
  height: 4rpx;
  position: absolute;
  right: -200rpx;
  top: 50%;
  margin-top: -2rpx;
  background: #bdc5de;
  z-index: 1;
}
.status_text_box{
  width: 672rpx;
  height: 40rpx;
  position: absolute;
  text-align: center;
  left: 50%;
  margin-left: -336rpx;
  top: 84rpx;
}
.status_text{
  width: 33.33333%;
  height: 40rpx;
  line-height: 40rpx;
  color: #888;
  text-align: center;
  float: left;
}

.order_num_box{
  width: 100%;
  height: 128rpx;
  background: #fff;
  position: relative;
}
.num_type{
  width: 100%;
  height: 40rpx;
  position: absolute;
  left: 0;
  top: 20rpx;
  color: #1e7fff;
  padding-left: 24rpx;
}
.order_num{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  left: 0;
  padding-left: 24rpx;
  top: 68rpx;
}
.order_my_num{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #888;
  padding-left: 24rpx;
}

/* 下面  */
.item_box{
  border-bottom: 1rpx solid #e6e7e8;
  height: 200rpx;
  position: relative;
  width: 100%;
  overflow: hidden;
}
.item_img{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 0;
  top: 40rpx;
  background: #ccc;
}
.item_img image{
  width: 100%;
  height: 100%;
}
.item_name{
  width: 370rpx;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  left: 146rpx;
  top: 40rpx;
}
.item_num,.item_gold{
  width: 326rpx;
  height: 34rpx;
  line-height: 34rpx;
  position: absolute;
  left: 146rpx;
  color: #b2b2b2;
  font-size: 24rpx;
}
.item_num{
  top: 87rpx;
}
.item_gold{
  top: 128rpx;
}

.text_box{
  width: 702rpx;
  height: 122rpx;
  position: relative;
  margin: 0 auto;
  border-bottom: 1rpx solid #e6e7e8;
}
.text_left,.text_right{
  width: 50%;
  height: 122rpx;
  line-height: 122rpx;
  position: absolute;
  top: 0;
  font-size: 30rpx;
}
.text_left{
  left: 0;
}
.text_right{
  right: 0;
  text-align: right;
}
.text_last_box{
  width: 100%;
  padding: 30rpx 0 20rpx;
  position: relative;
}
.last_box{
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
  margin-bottom:10rpx;
  position: relative;
}
.last_left,.last_right{
  width: 50%;
  height: 42rpx;
  line-height: 42rpx;
  position: absolute;
  top: 0;
  font-size: 30rpx;
}
.last_right{
  text-align: right;
  right: 24rpx;
}
.last_left{
  left: 24rpx;
}
.tip_box{
  padding-top: 30rpx;
  position: relative;
  height: 383rpx;
  background: #f5f5f9;
}
.tip_title{
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
  font-size: 30rpx;
  text-align: center;
  color: #b2b2b2;
}
.tip_text0,.tip_text1,.tip_text2{
  width: 100%;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #b2b2b2;
  padding-left: 24rpx;
}
.tip_text1,.tip_text2{
    margin-top: 16rpx;
}
.tip_text0{
    margin-top: 20rpx;
}

.fixed_box{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
}
.fixed_left{
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #b2b2b2;
  font-size: 36rpx;
  position: relative;
}
.fixed_left .contact{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
  opacity: 0;
}
.fixed_right{
  width: 450rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  right: 0;
  top: 0;
  color: #fff;
  font-size: 36rpx;
  background: #f29200;
  text-align: center;
}
.item_money{
  width: 220rpx;
  height: 42rpx;
  line-height: 42rpx;
  position: absolute;
  right: 0;
  top: 79rpx;
  font-size: 30rpx;
  text-align: right;
}
.text_left0{
  background: url(http://ozg7zdnzy.bkt.clouddn.com/fls_red_box.png) left center no-repeat;
  background-size: 36rpx 38rpx;
  padding-left: 44rpx;
}
.hover_bg{
  background-color: #d88301;
}
