}
.mid_box{
  width: 702rpx;
  margin: 0 auto;
  padding-top: 40rpx;
  position: relative;
}
.mid_title{
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  font-weight: 600;
}
.mid_item{
  width: 100%;
  height: 48rpx;
  position: relative;
  margin-bottom: 50rpx;
}
.mid_btn{
  min-width: 196rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 18rpx;
  color: #fff;
  background: #f29200;
  float: left;
  border-radius: 6rpx;
}
.mid_text{
  line-height: 48rpx;
  height: 48rpx;
  float: left;
  margin-left: 20rpx;
  overflow: hidden;
  color: #888;
}
