.top_box{
  width: 702rpx;
  height: 240rpx;
  position: relative;
  margin: 0 auto;
  border-bottom: 1rpx solid #e6e7e8;
}
.top_img{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -80rpx;
}
.top_img image{
  width: 100%;
  height: 100%;
}
.top_text0{
  width: 540rpx;
  height: 48rpx;
  line-height: 48rpx;
  position: absolute;
  left: 176rpx;
  top:58rpx;
  font-size: 34rpx;
  font-weight: 600;
}
.top_text1{
  width: 540rpx;
  height: 67rpx;
  position: absolute;
  left: 176rpx;
  top: 116rpx;
  color: #f86566;
  font-size: 24rpx;
  line-height: 67rpx;
  font-weight: 600;
}
.top_text2{
  display: inline-block;
  font-size: 48rpx;
