/* pages/follow/follow.wxss */

page{
  width: 100%;
  height: 100%;
  overflow: auto;
  position: relative;
  background: #f5f5f9;
}
.page{
  width: 100%;
  height: 100%;
  position: relative;
}

.none_box{
  width:100%;
  height: 100%;
  position: relative;
}
.none_bg{
  width: 148rpx;
  height: 148rpx;
  position: absolute;
  top: 330rpx;
  left: 50%;
  margin-left: -74rpx;
  background: url(http://ozg7zdnzy.bkt.clouddn.com/fls_logo33.png) center center no-repeat;
  background-size: 100% 100%;
}
.none_text{
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  color: #888;
  font-size: 32rpx;
  text-align: center;
  position: absolute;
  top: 508rpx;
  left: 0;
}

.item_box{
  width: 702rpx;
  height: 280rpx;
  position: relative;
  margin: 0 auto;
  border-bottom: 1rpx solid #e6e7e8;
}
.item_img{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  left: 0;
  top: 40rpx;
}
.item_img image{
  width: 100%;
  height: 100%;
}
.item_name{
  width: 480rpx;
  height: 45rpx;
  line-height: 45rpx;
  position: absolute;
  left: 220rpx;
  top: 42rpx;
  font-weight: 600;
  font-size: 32rpx;
}
.item_date,.item_gold{
  width: 320rpx;
  height: 33rpx;
  line-height: 33rpx;
  color: #b2b2b2;
  font-size: 24rpx;
  position: absolute;
  left: 220rpx;
}
.item_date{
    top: 97rpx;
}
.item_gold{
  top: 140rpx;
}
.item_price{
  width: 320rpx;
  height: 56rpx;
  line-height: 56rpx;
  position: absolute;
  left: 220rpx;
  top: 183rpx;
  color: #f86566;
  font-size: 40rpx;
}
.item_btn{
  width: 152rpx;
  height: 60rpx;
  line-height: 58rpx;
  border: 1rpx solid #f29200;
  font-size: 24rpx;
  color: #f29200;
  text-align: center;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -30rpx;
  border-radius: 6rpx;
}
