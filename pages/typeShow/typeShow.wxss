/* pages/typeShow/typeShow.wxss */
.top_box{
  width: 100%;
  height: 80rpx;
  position: fixed;
  left: 0;
  top: 0;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e6e7e8;
  z-index: 2;
  background: #fff;
}
.top_left{
  width: 604rpx;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.top_scroll{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
  opacity: 0;
}
.type_box{
  padding-left: 4rpx;
}
.type_item{
  width: 180rpx;
  overflow: hidden;
  padding: 0 30rpx;
  text-align: center;
  height: 79rpx;
  line-height: 79rpx;
  font-size: 30rpx;
  float: left;
  position: relative;
}
.title_text{
  height: 79rpx;
  line-height: 79rpx;
}
.active_title{
  color: #f29200;
  border-bottom: 4rpx solid #f29200;
}
.top_right{
  width: 146rpx;
  height: 79rpx;
  line-height: 79rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 2;
  padding-left: 30rpx;
}
.title_logo0{
  background: #fff url(http://ozg7zdnzy.bkt.clouddn.com/fls_title0.png) 100rpx center no-repeat;
  background-size: 12rpx 12rpx
}
.title_logo1{
  background: #fff url(http://ozg7zdnzy.bkt.clouddn.com/fls_title1.png) 100rpx center no-repeat;
  background-size: 12rpx 12rpx
}
/* item  */
.item_out_box{
  width: 100%;
  overflow: hidden;
  position: relative;
  padding: 0 20rpx 40rpx 40rpx;
}
.item_box{
  width: 325rpx;
  height: 488rpx;
  margin-right: 20rpx; 
  float: left;
}
.i_img_box{
  width: 100%;
  height: 325rpx;
  position: relative;
  background: #FFFFFF;
  border: 1rpx solid #E6E7E8;
}
.i_img_box image{
  width: 100%;
  height: 100%;
}
.i_img_top{
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: url(http://ozg7zdnzy.bkt.clouddn.com/fls_item_top.png) left top no-repeat;
  background-size: 100% 100%;
}
.i_i_text0,.i_i_text1{
  width: 100%;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  white-space: nowrap;
}
.i_text0{
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.i_text1{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  color: #a1a1a1;
  margin-top: 10rpx;
}
.i_text2{
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  color: #f29200;
  margin-top: 10rpx;
}
.i_text2 text{
  float: left;
  display: block;
  color: #f29200;
}
.i_price_title{
  height: 48rpx;
  line-height: 48rpx;
  overflow: hidden
}
.i_price{
  font-size: 34rpx;
  line-height: 48rpx;
  font-weight: 600;
}
.i_num{
  font-weight: 600;
  font-size: 28rpx;
  line-height: 52rpx;
}
.alert_box{
  width: 100%;
  height: 100%;
  position: fixed;
  padding-top: 140rpx;
  left: 0;
  top: 0;
  z-index: 1;
}
.alert_title{
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding-left: 30rpx;
}
.alert_main{
  width: 100%;
  padding: 40rpx 10rpx 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}
.tag{
  height: 60rpx;
  line-height: 60rpx;
  background: #f5f5f9;
  font-size: 30rpx;
  border-radius: 4rpx;
  margin: 0 20rpx 20rpx 0;
  float: left;
  padding: 0 30rpx;
}
.active_tag{
  color: #fff;
  background: #f29200;
}
.tab_btn{
  width: 670rpx;
  height: 94rpx;
  line-height: 94rpx;
  background: #f29200;
  color: #fff;
  font-size: 36rpx;
  border-radius: 8rpx;
  text-align: center;
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  margin-left: -335rpx;
}
/* item end  */