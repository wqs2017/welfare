/* pages/gold/saleCard/saleCard.wxss */
@import "../addCard/tipText.wxss";
.top_box{
  width: 100%;
  padding: 40rpx 40rpx 80rpx;
}
.card_box{
  width: 670rpx;
  height: 335rpx;
  margin: 0 auto;
  position: relative;
  background: url(http://ozg7zdnzy.bkt.clouddn.com/fls_bg_card.jpg) center center no-repeat;
  background-size: 100% 100%;
  border-radius: 8rpx;
  box-shadow: 0 0 20rpx 0 rgba(242,146,0,0.16);
}
.card_name{
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  color: #fff;
  font-size: 48rpx;
  font-weight: 600;
  padding-left: 30rpx;
  position: absolute;
  left: 0;
  top: 30rpx;
}
.card_id{
  width: 100%;
  padding-left: 30rpx;
  color: #fff;
  font-size: 32rpx;
  line-height: 45rpx;
  height: 45rpx;
  position: absolute;
  left: 0;
  top: 105rpx;
}
.card_price{
  width: 100%;
  height: 118rpx;
  position: absolute;
  top: 122rpx;
  right: 0;
  padding-right: 30rpx;
  color: #fff;
  line-height: 118rpx;
  font-size: 84rpx;
  font-weight: 600;
  text-align: right;
}
.card_price text{
  font-size: 48rpx;
  line-height: 134rpx;
  color: #fff;
}
.card_old_price{
  width: 100%;
  padding-right: 30rpx;
  font-size: 56rpx;
  color: #FFD391;
  text-decoration: line-through;
  position: absolute;
  right: 0;
  top: 227rpx;
  text-align: right;
}

.edit_box{
  width: 670rpx;
  height: 320rpx;
  margin-top: 40rpx;
  background: #FFFFFF;
  box-shadow: 0 0 20rpx 0 rgba(0,0,0,0.16);
  border-radius: 8rpx;
  position: relative;
}

.edit_box .text_box{
  width: 650rpx;
  height: 300rpx;
  border: 2rpx solid #e6e7e8;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -150rpx 0 0 -325rpx;
  padding: 30rpx;
}
.text_box textarea{
  width: 100%;
  height: 250rpx;
  line-height: 40rpx;
  text-align: center;
}
.num_tip{
  width: 100%;
  text-align: right;
  padding-right: 20rpx;
  position: absolute;
  right: 0;
  bottom: 20rpx;
  color: #888;
}

.fixed_box{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  text-align: center;
  z-index: 1;

}
.fixed_left{
  width: 300rpx;
  height: 100rpx;
  float: left;
  color: #b2b2b2;
  font-size: 36rpx;
}
.fixed_right{
  width: 450rpx;
  height: 100rpx;
  color: #fff;
  font-size: 36rpx;
  background: #f29200;
  float: right;
  position: relative;
}