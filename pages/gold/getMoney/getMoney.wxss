/* pages/gold/getMoney/getMoney.wxss */
@import "../addCard/tipText.wxss";
.page{
  background: #f5f5f9;
}
.top_box{
  width: 100%;
  padding: 40rpx 40rpx 80rpx;
  background: #fff;
}
.card_box{
  width: 670rpx;
  height: 335rpx;
  margin: 0 auto;
  position: relative;
  background: url(http://ozg7zdnzy.bkt.clouddn.com/fls_bg_card.jpg) center center no-repeat;
  background-size: 100% 100%;
  border-radius: 8rpx;
  box-shadow: 0 0 20rpx 0 rgba(242,146,0,0.16);
}
.card_img{
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  border-radius: 50%;
  background: #fff;
}
.cart_nickname{
  width: 480rpx;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  left: 156rpx;
  top: 60rpx;
  font-size: 36rpx;
  color: #fff;
}
.card_price{
  width: 100%;
  height: 118rpx;
  position: absolute;
  top: 122rpx;
  right: 0;
  padding-right: 30rpx;
  color: #fff;
  line-height: 118rpx;
  font-size: 84rpx;
  font-weight: 600;
  text-align: right;
}
.card_price text{
  font-size: 48rpx;
  line-height: 134rpx;
  color: #fff;
}
.card_old_price{
  width: 100%;
  padding-right: 30rpx;
  font-size: 56rpx;
  color: #FFD391;
  text-decoration: line-through;
  position: absolute;
  right: 0;
  top: 227rpx;
  text-align: right;
}
.btn{
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  font-size: 36rpx;
  text-align: center;
  line-height: 100rpx;
  background: #f29200;
  color: #fff;
}