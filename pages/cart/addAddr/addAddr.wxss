/* pages/cart/addAddr/addAddr.wxss */
.page{
  background: #f5f5f9;
  padding-top: 20rpx;
}
.addr_box{
  padding: 0 24rpx;
  background: #fff;
}
.text_box{
  width: 100%;
  overflow: hidden;
  border-bottom: 1rpx solid #e6e7e8;
  position: relative;
}
.text_left{
  width: 220rpx;
  height: 102rpx;
  line-height: 102rpx;
  float: left;
  font-size: 30rpx;
}
.text_left text{
  color: #f86566;
}
.text_right{
  width: 486rpx;
  overflow: hidden;
  height: 100rpx;
  position: absolute;
  right: 0;
  top: 0;
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: right;
}
.text_input{
  height: 102rpx;
  line-height: 102rpx;
  width: 486rpx;
  position: absolute;
  right: 0;
  top: 0;
  text-align: right;
  font-size: 30rpx;
}
.fixed_box{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #ffc66e;
}

/*  picker   */
.picker_box{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0,0,0,0.6);
  left: 0;
  top: 0;
  z-index: 99999;
}
.picker_view{
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 99999;
  background: #fff;
}
.picker_sure,.picker_cancel{
  font-size: 32rpx;
  width: 100rpx;
  
  padding: 30rpx;
  box-sizing: content-box;
  color: #353535;
  height: 34rpx;
  line-height:34rpx;
  position: absolute;
  top: 0;
  z-index: 9999999;
}
.picker_cancel{
  left: 0;
}
.picker_sure{
  right: 0;
  text-align: right;
}
.picker_item_box view{
  font-size: 32rpx;
}
.sureBtn0{
  background:#f29200;
}
.hover_btn{
  background-color: #d88301;
}

