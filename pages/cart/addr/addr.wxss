/* pages/cart/addr/addr.wxss */
.page{
  background: #fff;
}
.item_box{
  width: 702rpx;
  overflow: hidden;
  position: relative;
  border-bottom: 1rpx solid #e6e7e8;
  margin: 0 auto;
  padding-left: 66rpx;
  padding-top: 40rpx;
}
.item_circle{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  left: 0;
  top: 81rpx;
  border: 2rpx solid #9c9c9c;
  border-radius: 50%;
}
.item_circle .cover{
  width: 96rpx;
  height: 96rpx;
  position: absolute;
  left: -30rpx;
  top: -30rpx;
}
.item_name_box{
  width: 580rpx;
  height: 45rpx;
  line-height: 45rpx;
}
.item_name,.item_tel{
  float: left;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.item_name{
  max-width: 280rpx;
}
.item_tel{
  margin-left: 30rpx;
}
.item_addr{
  width: 594rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  overflow: hidden;
  padding-bottom: 40rpx;
}
.item_edit{
  width: 100rpx;
  line-height: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  top: 40rpx;
  color: #f29200;
  text-align: right;
}
.item_circle0{
  border:0;
  background: url(http://ozg7zdnzy.bkt.clouddn.com/fls_g_circle.png) center center no-repeat;
  background-size: 100% 100%;
}

.add_btn{
  width: 100%;
  height: 100rpx;
  line-height: 98rpx;
  font-size: 34rpx;
  padding-left: 280rpx;
  background: url(http://ozg7zdnzy.bkt.clouddn.com/fls_add_addr.png) 234rpx center no-repeat;
  background-size: 34rpx 34rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: #e6e7e8 1rpx solid;
}

