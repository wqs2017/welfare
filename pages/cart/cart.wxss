  width: 702rpx;
  height: 122rpx;
  position: relative;
  margin: 0 auto;
  border-bottom: 1rpx solid #e6e7e8;
}
.text_left,.text_right{
  width: 50%;
  height: 122rpx;
  line-height: 122rpx;
  position: absolute;
  top: 0;
  font-size: 30rpx;
}
.text_left{
  left: 0;
}
.text_right{
  right: 0;
  text-align: right;
}
.text_last_box{
  width: 100%;
  padding: 30rpx 0 20rpx;
  position: relative;
}
.last_box{
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
  margin-bottom:10rpx;
  position: relative;
}
.last_left,.last_right{
  width: 50%;
  height: 42rpx;
  line-height: 42rpx;
  position: absolute;
  top: 0;
  font-size: 30rpx;
}
